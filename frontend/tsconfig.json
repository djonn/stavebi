{
  // https://www.totaltypescript.com/tsconfig-cheat-sheet
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "customConditions": ["module"],
    "noEmit": true,

    // "outDir": "../src/wwwroot",
    // "sourceMap": true,

    "lib": ["es2022", "dom", "dom.iterable"],

    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
  }
}